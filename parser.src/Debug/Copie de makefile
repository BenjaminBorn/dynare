OperatorTable.o: ..\OperatorTable.cc
	g++ -c -mcpu=i386 -IC:\users\benzougar\parser++\include -I C:\CygWin\usr\Include -ggdb -O0 -o OperatorTable.o ..\OperatorTable.cc


SymbolTable.o: ..\SymbolTable.cc
