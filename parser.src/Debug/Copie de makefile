################################################################################
### Groups #####################################################################
################################################################################

FG00=\
	ModelParameters.o\
	ModelTree.o\
	NumericalConstants.o\
	OperatorTable.o\
	SymbolTable.o\
	VariableTable.o


################################################################################
### Build ######################################################################
################################################################################

ALL: $(FG00)
	g++ -mconsole -o modeltree.exe $(FG00) 

modeltree.exe: $(FG00)
	g++ -mconsole -o modeltree.exe $(FG00) 


################################################################################
### Commands ###################################################################
################################################################################

run: modeltree.exe
	modeltree.exe

debug: modeltree.exe
	gdb modeltree.exe

peview: modeltree.exe
	uemakeXp -xpe modeltree.exe

makef: 
	notepad makefile


