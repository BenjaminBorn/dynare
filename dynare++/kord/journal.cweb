@<|JournalRecord::operator<<| symmetry code@>=
JournalRecord& JournalRecord::operator<<(const IntSequence& s)
{
	operator<<("[");
	for (int i = 0; i < s.size(); i++) {
		operator<<(s[i]);
		if (i < s.size()-1)
			operator<<(",");
	}
	operator<<("]");
	return *this;
}

