@<|SystemResourcesFlash::diff| code@>=
void SystemResourcesFlash::diff(const SystemResourcesFlash& pre)
{
	utime -= pre.utime;
	stime -= pre.stime;
	elapsed -= pre.elapsed;
	idrss -= pre.idrss;
	majflt -= pre.majflt;
}

